    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@typechain/hardhat": "^9.1.0",
    "@types/eslint": "^8",
    "@types/node": ">=16.0.0",
    "eslint": "^8",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.10",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.2",
    "typescript": ">=4.5.0"
  }
